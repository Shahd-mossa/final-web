<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GLAM AND GLOW | Login</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500&family=Montserrat:wght@300;400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>

    <div class="login-container">
        <div class="logo">GLAM AND GLOW</div>
        <h2>Welcome Back</h2>
        <form id="loginForm" onsubmit="validateLogin()">
            <div class="form-group">
                <label for="username">Email or Username</label>
                <input type="text" id="username" name="username" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <div class="forgot-password">
                    <a href="/forgotpassword">Forgot password?</a>
                </div>
            </div>
            <button type="submit">Sign In</button>
            <div id="errorMessage" class="error"></div>
        </form>
    </div>

    <script>
        function validateLogin() {
            fetch("/api/v1/login", {
                method: 'POST',
                body: JSON.stringify({
                    email: document.getElementById('username').innerText,
                    password: document.getElementById('password').innerText,
                }),
                headers: {
                    "Content-type": "application/json; charset=UTF-8"
                }
            })
        }
    </script>
</body>

</html>